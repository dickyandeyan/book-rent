<%- include('./partials/header', {title: 'Books Home'}) %>


<%- include('./partials/navbar') %>


<div class="container">
  <form action="/book/add" method="POST">
    <div class="form-group">
      <label for="first_name">Books Title</label>
      <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="title">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Authors</label>
      <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="author">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Released Year</label>
      <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="released_year">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Price</label>
      <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="price">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Stock</label>
      <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="stock">
    </div>

    <button type="submit" class="btn btn-primary">Add Book</button>

  </form>
</div>


